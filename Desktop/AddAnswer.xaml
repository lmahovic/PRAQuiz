<Window x:Class="PRAQuiz.AddAnswer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRAQuiz"
        mc:Ignorable="d"
        Title="Add Answer" Height="400" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">
    <StackPanel>
        <TextBlock Padding="10 " Margin="10" FontWeight="Bold" Text="Enter answer" Width="200" HorizontalAlignment="Left"/>
        <TextBox Name="txtAnswerText" Margin="10" Padding="10" FontSize="15" TextWrapping="Wrap" FontWeight="DemiBold" HorizontalAlignment="Left" Height="150" Width="250" />
        <Grid>
            <Label Content="Correct?" Foreground="Red" FontSize="10" FontWeight="DemiBold" Margin="10"></Label>
            <CheckBox Name="chbCorrect" IsChecked="False" Margin="65,17,224,-16" RenderTransformOrigin="0.31,0.609"></CheckBox>
        </Grid>
        <Button Name="btnSaveAnswer" Margin="20 20 20 20" Style="{StaticResource ButtonStyle}" Width="130" Height="25" Content="Add" Click="btnSaveAnswer_Click" />
   
    </StackPanel>
</Window>
