<Window x:Class="PRAQuiz.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRAQuiz"
        mc:Ignorable="d"
        Title="Reset Password" Height="340" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">
    <StackPanel>
        <TextBlock Padding="10 " Margin="10" FontWeight="Bold" Text="Enter your e-mail" Width="200" HorizontalAlignment="Left"/>
        <TextBox Margin="10" Padding="10" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" Width="250" x:Name="ResponseTextBoxEmail" />
        <TextBlock Margin="10" Padding="10 " FontWeight="Bold" Text="Enter new password" Width="200" HorizontalAlignment="Left"/>
        <PasswordBox Margin="10 0 0 10" Padding="10" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" Width="250" x:Name="ResponseTextBoxPassword" />

        <Button Name="btnResetPasswod" Margin="20 20 20 20" Style="{StaticResource ButtonStyle}" Width="130" Height="25" Content="Reset password" Click="btnResetPasswod_Click" />
    </StackPanel>
</Window>
